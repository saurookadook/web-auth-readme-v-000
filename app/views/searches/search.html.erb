<h1>Search for Coffee Shops Near Me</h1>
<%= form_tag '/search' do %>
  <%= label_tag :zipcode %>
  <%= text_field_tag :zipcode %>
  <%= submit_tag "Search!" %>
<% end %>
<div>
  <% if @error %>
    <p><%= @error %></p>
  <% elsif @venues %>
    <ul>
    <% @venues.each do |venue| %>
      <li>
        <%= venue["name"] %><br>
        <%= venue["location"]["address"] %><br>
        Checkins: <%= venue["stats"]["checkinsCount"] %>
      </li>
    <% end %>
    </ul>
  <% end %>
  <% if @friends.size > 0 %>
    <ul>
      <% @friends.each do |friend| %>
        <li><%= "#{friend['firstName']} #{friend['lastName']}" %></li>
      <% end %>
    </ul>
  <% else %>
    <p>Looks like you don't have any foursquare friends yet.</p>
  <% end %>
</div>
